/* pages/my/my.wxss */
@import "../tpls/base.wxss";

.my-container {
  background-color: #fff;
}

.my-box {
  overflow-x: hidden;
  margin-bottom: 92rpx;
  font-size: 26rpx;
}

.my-item {
  display: flex;
  padding: 20rpx;
  padding-left: 0;
  background-color: #fff;
  border-bottom: 1rpx solid #d0d0d7;
  height: 195rpx;
}

.my-item:last-child {
  margin-bottom: 0;
}

.my-item>view {
  height: 100%;
}

.my-item-main {
  width: 100%;
  display: flex;
}

.my-item-checkbox {
  width: 84rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.my-item-checkbox image {
  height: 44rpx;
  width: 44rpx;
}

.my-item-img {
  width: 186rpx;
  height: 100%;
  background-color: #f5f6f5;
  border-radius: 4rpx;
}

.my-item-img image {
  width: 100%;
  height: 100%;
}

.my-item-word {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
  padding: 4rpx 0;
  margin-left: 20rpx;
  box-sizing: border-box;
  color: #454553;
}

.title-box {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-top: 35rpx;
  margin-left: 20rpx;
}

.bottom-box {
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.my-item-counts {
  width: 220rpx;
  display: flex;
  justify-content: space-between;
  text-align: center;
}

.my-item-counts>view {
  display: flex;
  justify-content: center;
  align-items: center;
}

.my-item-counts .btns {
  color: #454553;
  font-size: 50rpx;
  padding: 0 10rpx;
}

.my-item-counts .btns.disabled {
  color: #d5d5db;
}

.my-item-counts .counts {
  color: #454553;
  font-size: 24rpx;
  padding-top: 12rpx;
  box-sizing: border-box;
}

.delete {
  font-size: 25rpx;
  padding: 0 10rpx;
  color: red;
}

/*合计*/

.all-accounts-box {
  background-color: #ab956d;
  color: #fff;
}

.all-accounts-box>view {
  display: flex;
  align-items: center;
}

.all-select {
  font-size: 28rpx;
  width: 40%;
}

.all-select image {
  height: 48rpx;
  width: 48rpx;
  margin: 0 20rpx;
}

.all-vocation-submit {
  width: 60%;
}

.all-vocation-submit.disabled {
  color: #e6e6e6;
}

.vocations-btn {
  display: flex;
  margin-left: 250rpx;
  height: 32rpx;
  width: 50%;
  font-size: 28rpx;
  /* border-right: 3rpx dotted #fff; */
}
